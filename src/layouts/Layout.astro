---
import Document from "./Document.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Document>
  <head>
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</Document>

<style is:global>
  html {
    margin: 0;
    padding: 0;
    scroll-behavior: smooth;
    font-family: "Poppins", sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
  }

  .hide-scrollbar {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>
